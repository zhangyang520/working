    android:layout_height="@dimen/alert_height"
    android:orientation="horizontal"
    android:id="@+id/ll"
    android:layout_gravity="center"
    android:gravity="center">
    
   <TextView 
       android:id="@+id/tv"
       android:layout_width="wrap_content"
